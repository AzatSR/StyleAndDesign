<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/telega"
        style="@style/CustomButtonStyle.Strong"
        android:text="TELEGRAM"
        app:layout_constraintTop_toBottomOf="@+id/text_view_telega"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/vk"
        style="@style/CustomButtonStyle"
        android:backgroundTint="#6290EF"
        android:text="VK"
        android:textSize="55sp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_vk"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/insta"
        style="@style/CustomButtonStyle"
        android:backgroundTint="#FFEF9A9A"
        android:text="Instagram"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_insta"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/facebook"
        style="@style/CustomButtonForFacebook"
        android:text="f"
        app:layout_constraintTop_toBottomOf="@+id/text_view_facebook"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/whatsapp"
        style="@style/CustomButtonStyle"
        android:backgroundTint="#009688"
        android:text="WhatsApp"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_whatsapp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_view_telega"
        style="@style/Text_View_Design"
        android:layout_marginTop="40dp"
        android:fontFamily="casual"
        android:text="fast-growing messenger"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="39dp" />

    <TextView
        android:id="@+id/text_view_vk"
        style="@style/Text_View_Design"
        android:text="российский консервативный мессенджер"
        app:layout_constraintTop_toBottomOf="@id/telega"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_view_insta"
        style="@style/Text_View_Design"
        android:text="best messenger for bloggers"
        android:fontFamily="@font/eagle_lake"
        app:layout_constraintTop_toBottomOf="@id/vk"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_view_facebook"
        style="@style/Text_View_Design"
        android:text="популярный американский мессенджер"
        app:layout_constraintTop_toBottomOf="@id/insta"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_view_whatsapp"
        style="@style/Text_View_Design"
        android:fontFamily="@font/aclonica"
        android:text="very popular messenger"
        app:layout_constraintTop_toBottomOf="@id/facebook"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>